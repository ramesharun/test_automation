{
  "name": "test_automation",
  "version": "1.0.0",
  "description": "Test automation framework using a NodeJS stack",
  "main": "index.js",
  "scripts": {
    "test": "npm run clearDirs; mocha test/",
    "seleniumInstall": "$(npm bin)/selenium-standalone install --config=./seleniumServerConfig.js",
    "seleniumStart": "$(npm bin)/selenium-standalone start --config=./seleniumServerConfig.js",
    "seleniumStop": "pkill -f selenium-standalone",
    "clearDirs": "$(npm bin)/rimraf screenshots/ allure-re*/*",
    "allureBuild": "$(npm bin)/allure generate allure-results/ --clean",
    "allureOpen": "$(npm bin)/allure open allure-report --host localhost"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wattersnathen/test_automation.git"
  },
  "author": "Nathen Watters <wattersnathen@gmail.com>",
  "license": "SEE LICENSE IN ./LICENSE",
  "bugs": {
    "url": "https://github.com/wattersnathen/test_automation/issues"
  },
  "homepage": "https://github.com/wattersnathen/test_automation#readme",
  "devDependencies": {
    "allure-commandline": "^2.5.0",
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "mocha-allure-reporter": "^1.4.0",
    "nightwatch": "^0.9.21",
    "selenium-standalone": "^6.15.1",
    "supertest": "^3.1.0"
  },
  "dependencies": {
    "ps-list": "^4.1.0",
    "rimraf": "^2.6.2",
    "winston": "^3.0.0"
  }
}
